{% extends 'base.html.twig' %}

{% block title %}Les connections
{% endblock %}


{% block body %}
	<h1>Les connexions</h1>

	<ul>
		<li><a href="{{ path("connectionForm", { "parentSceneId" : 1 }) }}">Ajouter une connexion</a></li>
	</ul>

    <table class="list">
    	<tr>
    		<th>id</th>
    		<th>Label</th>
    		<th>Pattern</th>
    		<th>Conditions (variables)</th>
    		<th>Position</th>
    		<th>Scène parente</th>
    		<th>Scène cible</th>
    		<th>Projet</th>

    		<th>Actions</th>
    	</tr>

    	{% for item in list %}
    	<tr>
    		<td>{{ item.id }}</td>
    		<td>{{ item.label }}</td>
    		<td>{{ item.pattern }}</td>
    		<td>{{ item.conditions }}</td>
    		<td>{{ item.position }}</td>
    		<td>#{{ item.parentScene.id }} {{ item.parentScene.title }}</td>
    		<td>#{{ item.childScene.id }} {{ item.childScene.title }}</td>
    		<td>{{ item.childScene.project.title }}</td>
			
			<td>
				
            </td>
                    
    	</tr>
    	{% endfor %}
    </table>
{% endblock %}
