{% extends 'base.html.twig' %}

{% block title %}Choix du projet
{% endblock %}


{% block body %}
    <h1>Choix du projet : </h1>
	
	<ul>
		<li><a href="{{ path("projectForm") }}">Ajouter un projet</a></li>
	</ul>
	
	<table class="list">
		<tr>
			<th>Projet</th>
			<th>Description</th>
			<th>Action</th>
		</tr>
	
    	
	{% for project in projects %}
		<tr>
			<td>#{{ project.id }} {{ project.title }}</td>
			<td>{{ project.description }}</td>
			<td><a href="{{ path("chooseProject", { "projectId" : project.id }) }}">Choisir</a></td>
		</tr>
    {% endfor %}

    </table>
	
	 

 
{% endblock %}
